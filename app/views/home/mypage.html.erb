  <p class="font-14 font-sm-10 text-primary mb-4 mb-lg-5"><%= @user.name %>님</p>
  <div class="buttons d-flex w-100 justify-content-around">
    <button class="btn btn-white font-14 font-sm-10 w-160 w-sm-130">
      <a href="/vusers/edit" class="decoration-none font-grey">
			 회원정보수정하기
      </a>
    </button>
    <button class="btn btn-white font-14 font-sm-10 w-160 w-sm-130">
      <a href="/vusers/sign_out" class="decoration-none font-grey">
       로그아웃
      </a>
    </button>
  </div>
</section>
<!-- //MY PAGE -->
<!-- List -->
<section class="funding_list">
  <div class="container">
    <div class="row">
			<% @proposes.each do |propose| %>
				<div id="funding_card" class="col-12 col-lg-6 px-0 funding_card_box" style="background-image: url(<% if propose.image.url != nil %><%= propose.image.url %> <% else %> <%= propose.default_image %> <% end%>)">
	        <div class="funding_card d-flex flex-column h-100 w-100">
	          <a href="/propose/<%= propose.id %>" class="h-100">
	            <h4 class="funding_title text-white"><%= propose.title %></h4>
	            <div class="funding_card_info pt-lg-4">
								<p class="funding_days text-white text-right font-24 font-sm-18"><%= propose.status %></p>
								<% if (propose.status == "펀딩진행중" or propose.status == "펀딩 마감 하루전" or propose.status == "펀딩 마감 이틀전") and propose.deadlines != nil %>
              	<p class="funding_days text-white text-right">
									<span class="funding_d_day text-white"><%= ((propose.deadlines - Time.now)/(60*60*24) + 1).to_i %></span>일 남음
								</p>
								<% end %>
	              <p class="funding_money text-white text-right">&#8361;<%= propose.funded_money %></p>
	            </div>
	          </a>
	        </div>
	      </div>
			<% end %>
    </div>
  </div>
</section>
