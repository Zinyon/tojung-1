<!-- Cover -->
<section class="cover">
  <div class="brand pl-lg-4 pt-lg-4 visible-lg">
    <a class="navbar-brand py-0 mr-0" href="/">
      <%=image_tag("/assets/images/tojung_green.png", class:"logo")%>
    </a>
  </div>
  <div class="arrow visible-lg">
    <%=image_tag("/assets/images/arrow.png", class:"arrow_img")%>
  </div>
  <!-- <video src="../manual.mp4" autoplay></video> -->
</section>
<!-- //Cover -->

<!-- New -->
<section class="new">
  <h2 class="sr-only">제안하기</h2>
  <div class="container mx-0">
    <div class="row">
      <div class="col-2 col-lg-2 new_logo px-1 py-3 px-lg-5 py-lg-5">
        <%=image_tag("/assets/images/shape.png", class: "mic_icon d-block mx-auto")%>
      </div>
      <div class="col-9 col-lg-9 new_textbox px-0 ml-lg-3">
        <p id="mention" class="new_text font-20 font-sm-10"></p>
      </div>
    </div>
  </div>
</section>
<!-- //New -->

<!-- List -->
<section class="funding_list">
  <div class="container">
    <div class="row">
			<% @proposes.each do |propose| %>
				<div class="col-12 col-lg-6 px-0 funding_card_box" style="background-image: url(<% if propose.image.url != nil %><%= propose.image.url %> <% else %> <%= propose.default_image %> <% end%>)">
	        <div class="funding_card d-flex flex-column h-100">
	          <a href="/propose/<%= propose.id %>" class="h-100">
	            <h4 class="funding_title text-white mb-0"><%= propose.title %></h4>
	            <div class="funding_card_info">
								<% if (propose.status == "펀딩진행중" or propose.status == "펀딩 마감 하루전" or propose.status == "펀딩 마감 이틀전") and propose.deadlines != nil %>
              	<p class="funding_num text-white text-right">
									<span class="funding_nums text-white"><%= ((propose.deadlines - Time.now)/(60*60*24) + 1).to_i %></span>명
								</p>
								<% end %>
	              <p class="funding_money text-white text-right">&#8361;<%= propose.funded_money %></p>
	            </div>
	          </a>
	        </div>
	      </div>
			<% end %>
    </div>
  </div>
</section>
<!--//List  -->

<!-- typewriter js -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/TypewriterJS/1.0.0/typewriter.min.js"></script>
<!-- Typewriter -->
<script type="text/javascript" >
  var app = document.getElementById('mention');

  var typewriter = new Typewriter(app, {
    loop: true
  });

  typewriter.typeString('겪고 있는 문제가 있나요?\n')
    .pauseFor(1000)
    .typeString('지금 바로 말해주세요. 당신의 투정.')
    .pauseFor(2500)
    .start();
</script>
<!-- //TypeWriter -->
<!-- 원화 콤마찍기 -->
<script type="text/javascript">
  function comma(str) {
      str = String(str);
      return str.replace(/(\d)(?=(?:\d{3})+(?!\d))/g, '$1,');
  }
  var i = 0
  while( i< $(".funding_money").length){
    var money=$(".funding_money")[i].innerHTML;
    var newMoney=comma(money);
    $(".funding_money")[i].innerHTML=newMoney;
    i+=1;
  }
</script>
<!-- //원화 콤마찍기 -->
