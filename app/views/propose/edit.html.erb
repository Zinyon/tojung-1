<h1>Propose#edit</h1>
<p>Find me in app/views/propose/edit.html.erb</p>

<%= form_tag("/propose/update/:id", method: "post", multipart: true ) do %>
	
	<!-- 청원 제목 입력 -->
	<%= text_field_tag 'propose_title', "#{ @propose.title }", placeholder: "청원 제목을 입력해주세요" %>

	<!-- 청원 카테고리 드랍다운 입력-->
	<% bg_categorys = [ ["대분류1", "대분류1"] , [ "대분류2", "대분류2" ]  ] %>
	<div>
		<%= select_tag(:bg_category_name, options_for_select(bg_categorys))%></div>
	</div>
	
	<% sm_categorys = [ ["소분류1", "소분류1"] , [ "소분류2", "소분류2" ]  ] %>
	<div>
		<%= select_tag(:sm_category_name, options_for_select(sm_categorys)) %>
	</div>

	<!-- 청원 내용 입력 -->
	<%= text_field_tag 'propose_content', "#{ @propose.content }", placeholder: "청원 내용을 입력해주세요" %>
	
   
    <!-- 이미지 업로드 -->
	<%= file_field_tag('propose_image', accept: "image/png,image/gif,image/jpeg,image/PNG,image/jpg") %>

	<!-- 제출 -->
	<%= submit_tag("propose_create") %>
<% end %>
